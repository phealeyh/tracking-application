<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tracking.id11723222.com.trackingapplication.CreateTimetableActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout1"
        android:weightSum="1">

        <ImageButton
            android:src="@drawable/button_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onSubmitClicked"
            android:id="@+id/submitButton"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1">

        <ImageButton
            android:src="@drawable/button_create"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClearClicked"
            android:id="@+id/clearButton"


            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/location"
            android:id="@+id/location_view"
            android:layout_alignBottom="@+id/location_field"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/date"
            android:id="@+id/date_view"
            android:layout_below="@+id/location_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/time"
            android:id="@+id/time_view"
            android:layout_below="@+id/date_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="51dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/reason"
            android:id="@+id/reason_view"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:text="@string/location_format"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/location_field"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:text="@string/date_format"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:editable="false"
            android:ems="10"
            android:id="@+id/date_field"
            android:layout_alignBottom="@+id/date_view"
            android:layout_alignStart="@+id/location_field" />

        <EditText
            android:text="@string/time_format"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/time_field"
            android:layout_alignBottom="@+id/time_view"
            android:layout_alignLeft="@+id/date_field"
            android:layout_alignStart="@+id/date_field"
             />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reason_box"
            android:spinnerMode="dropdown"
            android:entries="@array/reasons"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/time_field" />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_box"
            android:spinnerMode="dropdown"
            android:entries="@array/time"
            android:layout_alignBottom="@+id/time_field"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/time_field"
            android:layout_alignTop="@+id/time_field" />



    </RelativeLayout>


</RelativeLayout>
