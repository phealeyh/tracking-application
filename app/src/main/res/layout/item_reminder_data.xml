<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/list_item_location_imagebutton">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/location_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textStyle="bold"
                android:textSize="@dimen/list_item_text_size"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/list_item_location_textview"
                android:textSize="@dimen/list_item_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+id/location"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/list_item_text_size"/>
            <TextView
                android:id="@+id/list_item_date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textSize="@dimen/list_item_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:textStyle="bold"
                android:textSize="@dimen/list_item_text_size"/>

            <TextView
                android:id="@+id/list_item_time_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/list_item_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reason_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reason"
                android:textStyle="bold"
                android:textSize="@dimen/list_item_text_size"/>

            <TextView
                android:id="@+id/list_item_reason_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reason"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/list_item_text_size"/>
        </LinearLayout>


    </LinearLayout>

    <ImageButton
        android:id="@+id/list_item_delete_imagebutton"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_action_action_delete"
        android:layout_alignBottom="@+id/list_item_location_imagebutton"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_location_imagebutton"
        android:src="@mipmap/ic_my_location_black_36dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/list_item_delete_imagebutton" />

</RelativeLayout>